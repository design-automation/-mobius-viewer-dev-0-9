{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "types": ["node", "webgl2", "offscreencanvas"],
    "paths": {
        "@assets/*" : ["./assets/*"],
        "@env/*" : ["./environments/*"],
        "@libs/*" : ["./assets/libs/*"],
        "@models/*" : ["./app/shared/models/*"],
        "@utils" : ["./app/shared/utils"],
        "@shared/*" : ["./app/shared/*"],
        "@views" : ["./app/views"],
        "@model-viewers": ["./app/mobius-viewer/viewers"],
        "@services" : ["./app/shared/services"],
        "@modules" : ["./assets/core/modules"],
        "@modules/*" : ["./assets/core/modules/*"]
    }
  },
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
